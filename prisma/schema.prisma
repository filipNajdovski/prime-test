generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}


// ENUMS
enum GameCategory {
  slots
  table
  live
}

// MODELS
model Game {
  id          String         @id @default(uuid())
  name        String
  provider    String
  image       String
  category    GameCategory
  description String?
  popularity  Int            @default(0)
  createdAt   DateTime       @default(now())

  favorites   Favorite[]
  sessions    GameSession[]

  @@index([name])
  @@index([provider])
  @@index([category])
  @@index([popularity])
}

model User {
  id        String         @id @default(uuid())
  email     String         @unique
  username  String         @unique
  password  String
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt

  favorites Favorite[]
  sessions  GameSession[]
}

model Favorite {
  userId    String
  gameId    String
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  game Game @relation(fields: [gameId], references: [id], onDelete: Cascade)

  @@id([userId, gameId])
  @@index([gameId])
}

model GameSession {
  id        String   @id @default(uuid())
  userId    String
  gameId    String
  startedAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  game Game @relation(fields: [gameId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([gameId])
  @@index([startedAt])
}

